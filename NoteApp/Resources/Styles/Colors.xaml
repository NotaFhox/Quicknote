<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 90s Inspired Color Palette -->
    
    <!-- Primary Beige Tones -->
    <Color x:Key="Primary">#D2B48C</Color><!-- Sandy Brown -->
    <Color x:Key="PrimaryDark">#C19A6B</Color><!-- Darker Tan -->
    <Color x:Key="PrimaryDarkText">#2F2F2F</Color>
    <Color x:Key="Secondary">#F5F5DC</Color><!-- Beige -->
    <Color x:Key="SecondaryDarkText">#8B7355</Color>
    <Color x:Key="Tertiary">#DEB887</Color><!-- Burlywood -->

    <!-- Classic 90s Interface Colors -->
    <Color x:Key="WindowsBeige">#F0F0E0</Color><!-- Classic Windows 95 beige -->
    <Color x:Key="ButtonFace">#E6E6E0</Color><!-- Button face color -->
    <Color x:Key="ButtonShadow">#808080</Color><!-- Button shadow -->
    <Color x:Key="ButtonHighlight">#FFFFFF</Color><!-- Button highlight -->
    <Color x:Key="ControlDark">#A0A0A0</Color><!-- Control dark edge -->
    <Color x:Key="ControlLight">#F8F8F0</Color><!-- Control light edge -->
    
    <!-- Text and Content -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="ClassicBlue">#000080</Color><!-- Navy blue for links/accents -->
    <Color x:Key="ClassicRed">#800000</Color><!-- Maroon for warnings -->
    <Color x:Key="OffWhite">#FEFEFE</Color>
    <Color x:Key="WarmWhite">#FFF8DC</Color><!-- Cornsilk -->

    <!-- Greys in warmer tones -->
    <Color x:Key="Gray100">#F5F5F0</Color>
    <Color x:Key="Gray200">#E8E8E0</Color>
    <Color x:Key="Gray300">#D0D0C8</Color>
    <Color x:Key="Gray400">#B8B8B0</Color>
    <Color x:Key="Gray500">#A0A098</Color>
    <Color x:Key="Gray600">#888880</Color>
    <Color x:Key="Gray700">#707068</Color>
    <Color x:Key="Gray800">#585850</Color>
    <Color x:Key="Gray900">#404038</Color>
    <Color x:Key="Gray950">#282820</Color>

    <!-- Accent Colors -->
    <Color x:Key="AccentBlue">#4169E1</Color><!-- Royal Blue -->
    <Color x:Key="AccentGreen">#228B22</Color><!-- Forest Green -->
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="WindowsBeigebrush" Color="{StaticResource WindowsBeige}"/>
    <SolidColorBrush x:Key="ButtonFaceBrush" Color="{StaticResource ButtonFace}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}"/>
    <SolidColorBrush x:Key="Gray800Brush" Color="{StaticResource Gray800}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>