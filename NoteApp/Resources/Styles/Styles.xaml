<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource ClassicBlue}" />
    </Style>

    <Style TargetType="IndicatorView">
        <Setter Property="IndicatorColor" Value="{StaticResource Gray400}"/>
        <Setter Property="SelectedIndicatorColor" Value="{StaticResource ClassicBlue}"/>
    </Style>

   
    <Style TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource ControlDark}" />
        <Setter Property="StrokeShape" Value="Rectangle"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonFace}"/>
    </Style>

    <Style TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource Gray600}" />
    </Style>

    
    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonFace}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderWidth" Value="2"/>
        <Setter Property="BorderColor" Value="{StaticResource ControlDark}"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="MinimumHeightRequest" Value="32"/>
        <Setter Property="MinimumWidthRequest" Value="60"/>
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource ButtonShadow}"
                    Offset="2,2"
                    Radius="0"
                    Opacity="0.8"/>
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{StaticResource Gray500}" />
                            <Setter Property="BackgroundColor" Value="{StaticResource Gray300}" />
                            <Setter Property="BorderColor" Value="{StaticResource Gray400}"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Gray400}" />
                            <Setter Property="Shadow">
                                <Shadow Brush="{StaticResource ButtonShadow}"
                                        Offset="1,1"
                                        Radius="0"
                                        Opacity="0.6"/>
                            </Setter>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

   
    <Style TargetType="Button" x:Key="AccentButton">
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ClassicBlue}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="BorderWidth" Value="2"/>
        <Setter Property="BorderColor" Value="{StaticResource ControlDark}"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="MinimumHeightRequest" Value="32"/>
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource ButtonShadow}"
                    Offset="2,2"
                    Radius="0"
                    Opacity="0.8"/>
        </Setter>
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{StaticResource ClassicBlue}" />
        <Setter Property="MinimumHeightRequest" Value="24"/>
        <Setter Property="MinimumWidthRequest" Value="24"/>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonFace}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="32"/>
    </Style>

    
    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray500}" />
        <Setter Property="MinimumHeightRequest" Value="80"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray500}" />
        <Setter Property="MinimumHeightRequest" Value="32"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    
    <Style TargetType="Frame">
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="BorderColor" Value="{StaticResource ControlDark}" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonFace}" />
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource ButtonShadow}"
                    Offset="2,2"
                    Radius="1"
                    Opacity="0.5"/>
        </Setter>
    </Style>

   
    <Style TargetType="Frame" x:Key="ContentFrame">
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{StaticResource ControlDark}" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="Padding" Value="12"/>
    </Style>

    <Style TargetType="ImageButton">
        <Setter Property="Opacity" Value="1" />
        <Setter Property="BorderColor" Value="{StaticResource ControlDark}"/>
        <Setter Property="BorderWidth" Value="1"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonFace}"/>
        <Setter Property="MinimumHeightRequest" Value="32"/>
        <Setter Property="MinimumWidthRequest" Value="32"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Span">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
    </Style>

  
    <Style TargetType="Label" x:Key="Headline">
        <Setter Property="TextColor" Value="{StaticResource ClassicBlue}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style TargetType="Label" x:Key="SubHeadline">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    
    <Style TargetType="Label" x:Key="CategoryLabel">
        <Setter Property="TextColor" Value="{StaticResource ClassicBlue}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
        <Setter Property="Padding" Value="4,2" />
    </Style>

    
    <Style TargetType="Label" x:Key="MetadataLabel">
        <Setter Property="TextColor" Value="{StaticResource Gray600}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="Italic" />
    </Style>

    <Style TargetType="ListView">
        <Setter Property="SeparatorColor" Value="{StaticResource ControlDark}" />
        <Setter Property="BackgroundColor" Value="{StaticResource WindowsBeige}" />
    </Style>

   
    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="TitleColor" Value="{StaticResource Gray600}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonFace}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="32"/>
    </Style>

    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource ClassicBlue}" />
    </Style>

    <Style TargetType="RadioButton">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="24"/>
        <Setter Property="MinimumWidthRequest" Value="24"/>
    </Style>

    <Style TargetType="RefreshView">
        <Setter Property="RefreshColor" Value="{StaticResource ClassicBlue}" />
    </Style>

    
    <Style TargetType="SearchBar">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray500}" />
        <Setter Property="CancelButtonColor" Value="{StaticResource ClassicBlue}" />
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="32"/>
    </Style>

    <Style TargetType="Shadow">
        <Setter Property="Radius" Value="2" />
        <Setter Property="Opacity" Value="0.4" />
        <Setter Property="Brush" Value="{StaticResource ButtonShadow}" />
        <Setter Property="Offset" Value="2,2" />
    </Style>

    <Style TargetType="Slider">
        <Setter Property="MinimumTrackColor" Value="{StaticResource ClassicBlue}" />
        <Setter Property="MaximumTrackColor" Value="{StaticResource Gray400}" />
        <Setter Property="ThumbColor" Value="{StaticResource ClassicBlue}" />
    </Style>

    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource ClassicBlue}" />
        <Setter Property="ThumbColor" Value="{StaticResource White}" />
    </Style>

    <Style TargetType="TimePicker">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonFace}"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="32"/>
    </Style>

    
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource WindowsBeige}" />
    </Style>

    
    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource ButtonFace}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource Black}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource Black}" />
        <Setter Property="Shell.DisabledColor" Value="{StaticResource Gray500}" />
        <Setter Property="Shell.UnselectedColor" Value="{StaticResource Gray600}" />
        <Setter Property="Shell.NavBarHasShadow" Value="True" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource ButtonFace}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource Black}" />
        <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource Black}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource Gray600}" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource ButtonFace}" />
        <Setter Property="BarTextColor" Value="{StaticResource Black}" />
        <Setter Property="IconColor" Value="{StaticResource Black}" />
    </Style>

    <Style TargetType="TabbedPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource ButtonFace}" />
        <Setter Property="BarTextColor" Value="{StaticResource Black}" />
        <Setter Property="UnselectedTabColor" Value="{StaticResource Gray500}" />
        <Setter Property="SelectedTabColor" Value="{StaticResource ClassicBlue}" />
    </Style>

</ResourceDictionary>