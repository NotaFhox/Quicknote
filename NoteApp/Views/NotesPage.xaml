<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteApp.Views.NotesPage"
             x:DataType="viewModels:NotesViewModel"
             xmlns:viewModels="clr-namespace:NoteApp.ViewModels"
             xmlns:models="clr-namespace:NoteApp.Models"
             Title="{Binding Title}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Search Bar and Category Filter -->
        <Grid Grid.Row="0" Padding="10" BackgroundColor="#F5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <SearchBar Grid.Row="0" Grid.Column="0"
                       Placeholder="Search notes..."
                       Text="{Binding SearchText}"
                       SearchCommand="{Binding SearchCommand}" />
            
            <Button Grid.Row="0" Grid.Column="1"
                    Text="Clear"
                    Command="{Binding ClearSearchCommand}"
                    IsVisible="{Binding SearchText, Converter={StaticResource StringIsNotNullOrEmptyConverter}}"
                    BackgroundColor="Transparent"
                    TextColor="DodgerBlue" />
            
            <Picker Grid.Row="1" Grid.ColumnSpan="2"
                    Title="Filter by Category"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory}"
                    Margin="0,5,0,0" />
        </Grid>

        <!-- Notes List -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Notes}"
                        SelectionMode="None"
                        Margin="10">
            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
                    <Label Text="No notes found" 
                           FontSize="20" 
                           TextColor="Gray" 
                           HorizontalTextAlignment="Center" />
                    <Label Text="Tap the '+' button to create your first note" 
                           TextColor="Gray" 
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Note">
                    <Frame Padding="15" Margin="5" HasShadow="True" CornerRadius="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Note Content -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding Title}"
                                   FontSize="18"
                                   FontAttributes="Bold" />
                            
                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="{Binding Content}"
                                   MaxLines="2"
                                   LineBreakMode="TailTruncation"
                                   TextColor="Gray" />
                            
                            <Label Grid.Row="2" Grid.Column="0"
                                   Text="{Binding Category}"
                                   FontSize="12"
                                   TextColor="DodgerBlue"
                                   FontAttributes="Bold" />
                            
                            <Label Grid.Row="3" Grid.Column="0"
                                   Text="{Binding DateModified, StringFormat='{0:dd MMM yyyy HH:mm}'}"
                                   FontSize="12"
                                   TextColor="Gray" />

                            <!-- Delete Button -->
                            <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="4"
                                    Text="Ã—"
                                    FontSize="20"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    CornerRadius="20"
                                    BackgroundColor="Red"
                                    TextColor="White"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:NotesViewModel}}, Path=DeleteNoteCommand}"
                                    CommandParameter="{Binding .}" />

                            <!-- Tap Gesture -->
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:NotesViewModel}}, Path=SelectNoteCommand}"
                                                      CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Add Note Button -->
        <Button Grid.Row="2"
                Text="+ Add Note"
                FontSize="18"
                BackgroundColor="DodgerBlue"
                TextColor="White"
                HeightRequest="50"
                Margin="20,10"
                Command="{Binding AddNoteCommand}" />

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="1"
                           IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />
    </Grid>
</ContentPage>